#include<iostream>
using namespace std;
int main()
{
 //By-Ghanendra Yadav
 int i,j,k,n;

 cout<<"Enter How Many Row Print With Pattern\n";
 cin>>n;

 for(i=1; i<=n; i++)
 {
  for(j=n-1; j>=i; j--)
  {
   cout<<" ";
  }
  for(k=1; k<=(2*i-1); k++)
  {
   cout<<"*";
  }
  cout<<"\n";
 }
 return 0;
}
