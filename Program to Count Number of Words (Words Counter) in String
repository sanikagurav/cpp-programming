#include<iostream>
#include<conio.h>
#include<cstring>
using namespace std;
int main()
{
 /*Visit - www.programmingwithbasics.com*/
   
    printf("=====================================");
    printf("\nVisit - www.programmingwithbasics.com");
    printf("\n=====================================");
    
 char str[100],a;
 int w=0,l,c=0,j, i;

 cout<<"\nPlease Enter A String: \n\n";
 gets(str);

 for(i=0;i<100;i++)
     if(str[i]==' ')
       c++;
     else
         break;

 for(j=c;str[j]!='\0';j++)
 {
  if(str[j]==' ' && str[j+1]!=' ')
   w++;
 }

 if(str[j-1]==' ')
    w--;
 
 cout<<w+1;

 return 0;
}
